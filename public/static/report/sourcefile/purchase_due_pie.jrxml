	<property name="ireport.scriptlethandling" value="0" />
	<property name="ireport.encoding" value="UTF-8" />
	<import value="java.util.*" />
	<import value="net.sf.jasperreports.engine.*" />
	<import value="net.sf.jasperreports.engine.data.*" />

	<queryString><![CDATA[select a.clientname as clientname,
a.orgname as orgname,
a.duemonthyear,
sum(a.invoicetotal) as invoicetotal,
sum(a.outstandingamt) as outstandingamt,
a.dueyear,
a.duemonth


from 
(select ad_client.name as clientname,
ad_org.name as orgname,
c_invoice.grandtotal as invoicetotal,
c_bpartner.name as bpname,
fin_payment_schedule.outstandingamt as outstandingamt,
extract(year from to_date(fin_payment_schedule.duedate,'dd/mm/yyyy')) as dueyear,
extract(month from to_date(fin_payment_schedule.duedate,'dd/mm/yyyy')) as duemonth,
to_char(fin_payment_schedule.duedate, 'mon') || '-' || extract(year from to_date(fin_payment_schedule.duedate,'dd/mm/yyyy')) as duemonthyear

from c_invoice,c_bpartner,fin_payment_schedule,ad_client,ad_org

where 
ad_client.ad_client_id = c_invoice.ad_client_id
and ad_org.ad_org_id = c_invoice.ad_org_id
and c_invoice.c_bpartner_id = c_bpartner.c_bpartner_id
and c_invoice.c_invoice_id = fin_payment_schedule.c_invoice_id
and fin_payment_schedule.duedate >= TO_DATE('2018-09-01','YYYY-MM-DD') 
and fin_payment_schedule.duedate <= TO_DATE('2018-12-31','YYYY-MM-DD')
and c_invoice.issotrx = 'N'
and c_invoice.ad_org_id = 'C35242D9FBF84A289B5AD01C915284C1'

order by ad_org.name,dueyear,duemonth,duedate)a

group by a.clientname,a.orgname,a.dueyear,a.duemonth,a.duemonthyear

order by a.dueyear,a.duemonth]]></queryString>

